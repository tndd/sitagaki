{
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true
    },
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]",
        "WARN",
        "NOTE"
    ],
    "isort.args": [
        "--profile",
        "black"
    ],
    "todo-tree.filtering.excludeGlobs": [
        "**/node_modules/*/**",
        ".venv/**"
    ],
    "folder-path-color.folders": [
        {
            "path": "domain",
            "symbol": "D",
            "tooltip": "DOMAIN",
            "color": "red"
        },
        {
            "path": "infra",
            "symbol": "In",
            "tooltip": "INFRA",
            "color": "yellow"
        },
        {
            "path": "tests/factory",
            "symbol": "🏭🧪",
            "tooltip": "TEST",
            "color": "green"
        },
        {
            "path": "tests/domain",
            "symbol": "💎🧪",
            "tooltip": "TEST",
            "color": "green"
        },
        {
            "path": "tests/infra",
            "symbol": "💽🧪",
            "tooltip": "TEST",
            "color": "green"
        },
        {
            "path": "tests/utils",
            "symbol": "🔧🧪",
            "tooltip": "TEST",
            "color": "green"
        }
    ],
}